{
  "manifest_version": 3,
  "name": "LinkedIn Easy Apply",
  "version": "3.1",
  "description": "Manually trigger LinkedIn Easy Apply process.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["Content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["data.json"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}
